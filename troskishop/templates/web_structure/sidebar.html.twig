<!-- Sidebar -->
<div class="col-2">
    <aside class="sidebar">
        <h4>Filtros</h4>
        <form>
            <!-- Filtro por Categoría -->
            <div class="mb-3">
                <h5>Categoría</h5>
                <select class="form-select" aria-label="Select category">
                    <option selected>Selecciona una categoría</option>
                    <option value="1">Portátiles</option>
                    <option value="2">Sobremesa</option>
                    <option value="3">Periféricos</option>
                </select>
            </div>

            <!-- Filtro por Rango de Precio -->
            <div class="mb-3">
                <h5>Rango de Precio</h5>
                <input type="number" class="form-control" placeholder="Mínimo" aria-label="Min price">
                <input type="number" class="form-control mt-2" placeholder="Máximo" aria-label="Max price">
            </div>

            <!-- Filtro por Nombre -->
            <div class="mb-3">
                <h5>Buscar por Nombre</h5>
                <input type="text" class="form-control" placeholder="Nombre del producto">
            </div>

            <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
        </form>
    </aside>
</div>
