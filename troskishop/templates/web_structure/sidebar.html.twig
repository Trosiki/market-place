<div class="col-3">
    <aside class="sidebar">
        <h4>Filtros</h4>
        <form hx-post="{{ path('products') }}" hx-swap="outerHTML" hx-target="#products" hx-indicator="#loader-products">
            <div class="mb-3">
                <h5>Buscar por Nombre</h5>
                <input type="text" class="form-control" name="name" placeholder="Nombre del producto">
            </div>
            <div class="mb-3">
                <h5>Categoría</h5>
                <select class="form-select" name="category" aria-label="Select category">
                    <option value="" selected>Selecciona una categoría</option>
                    <option value="Portatil">Portátiles</option>
                    <option value="Sobremesa">Sobremesa</option>
                    <option value="Ratón">Ratones</option>
                    <option value="Teclado">Teclados</option>
                    <option value="Monitor">Monitores</option>
                    <option value="Cascos">Cascos</option>
                </select>
            </div>
            <div class="mb-3">
                <h5>Rango de Precio</h5>
                <input type="number" class="form-control" name="priceMin" placeholder="Mínimo" aria-label="Min price">
                <input type="number" class="form-control mt-2" name="priceMax" placeholder="Máximo" aria-label="Max price">
            </div>
            <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
        </form>
    </aside>
</div>
