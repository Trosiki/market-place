{% set active_page = 'all-catalog' %}
{% set active_filters = false %}
{% extends 'base.html.twig' %}
{% block content %}
<div class="product-detail row">
    <div class="col-md-6">
        <div class="product-image">
            <img src="{{ asset(product.image) }}" class="img-fluid" alt="Product Image">
        </div>
    </div>
    <div class="col-md-6">
        <h1 class="product-title">{{ product.name }}</h1>
        <p class="product-price">{{ product.price }}€</p>
        <p class="product-description">
            {{ product.description }}
        </p>
        <div class="product-specs">
            <div class="spec-item">
                <span>Marca:</span>
                <span>{{ product.brand }}</span>
            </div>
            <div class="spec-item">
                <span>Modelo:</span>
                <span>{{ product.model }}</span>
            </div>
            <div class="spec-item">
                <span>Categoría:</span>
                <span>{{ product.category }}</span>
            </div>
        </div>
        <button class="btn btn-add-to-cart mt-4">Agregar al carrito <i class="fas fa-cart-plus"></i></button>
    </div>
    <div class="col-md-12">
        <div class="product-specification">
            {{ product.specification | default('') }}
        </div>
    </div>
</div>
{% endblock %}