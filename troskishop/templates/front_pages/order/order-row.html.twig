{% for order in orders %}
    <div class="order-card"
         {% if loop.last %}
         hx-post="{{ path('get_orders_before_id_of_user', {orderId: order.id}) }}"
         hx-trigger="revealed"
         hx-swap="afterend"
         hx-indicator="#loader-orders"
         {% endif %}
    >
        <a href="{{ path('detail_order', {orderId: order.id}) }}" class="text-decoration-none">
            <div class="card-header">
                Pedido #{{ order.id }}
            </div>
            <div class="card-body">
                <div class="order-details">
                    <div class="order-info">
                        <span>Estado: {{ order.orderStatus }}</span>
                        <span>Fecha de Creaci√≥n: {{ order.createdAt | date('Y/m/d')}}</span>
                    </div>
                    <div class="product-images">
                        {% for shoppingCartProduct in order.shoppingCart.products %}
                            <img src="{{ shoppingCartProduct.product.image }}" alt="{{ shoppingCartProduct.product.name }}">
                        {% endfor %}
                    </div>
                </div>
            </div>
        </a>

    </div>
{% endfor %}